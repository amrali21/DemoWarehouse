<Window x:Class="DemoWarehosue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWarehosue"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <DataGrid Margin="159,10,203,217" ItemsSource="{Binding allItems, Mode=OneWay}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*" Header="Name" Binding="{Binding Name}"/>
                        <DataGridTextColumn Width="*" Header="Stock" Binding="{Binding StockQuantity}"/>
                        <DataGridTextColumn Width="*" Header="Last Updated" Binding="{Binding LastUpdated}"/>
                        <!--<DataGridTextColumn Width="auto" MinWidth="40" Header="DE" Binding="{Binding DE, StringFormat=n2}"/>
                        <DataGridTextColumn Width="auto" MinWidth="40" Header="Shape" Binding="{Binding Shape, StringFormat=n2}"/>
                        <DataGridTextColumn Width="auto" MinWidth="40" Header="DC" Binding="{Binding DC, StringFormat=n2}"/>-->
                    </DataGrid.Columns>

                    </DataGrid>

                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="14*"/>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="55*"/>
                        <ColumnDefinition Width="712*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
